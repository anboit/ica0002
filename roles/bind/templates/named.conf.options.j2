acl lan {
   {% for n in acl_lan_networks %}
   {{- n }};
   {% endfor -%}
 }; 
options {
        directory "/var/cache/bind";
        forwarders {
           {% for n in port_forwarders %}
           {{ n -}};
           {% endfor %}
        };
        allow-query {
            lan;
        };
        dnssec-validation no;
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
